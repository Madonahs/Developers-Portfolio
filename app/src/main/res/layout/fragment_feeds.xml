<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.madonasyombua.growwithgoogleteamproject.ui.fragment.FeedsFragment">
<!-- Camera to be modified just a dummy since we need to include some permission on our manifest -->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/project_screenshot"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_camera" />

  </LinearLayout>


  <!--home ToolBar -->
